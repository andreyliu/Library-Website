extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='name') Genre:
            input#name.formcontrol(type='text',
                placeholder='fantacy, Poetry etc.'
                name='name'
                value=(genre === undefined ? '' : genre.name))
        button.btn.btn-primary(type='submit') Submit

        if errors
            ul
                for error in errors
                    li!= error.msg